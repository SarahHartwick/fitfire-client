<center>
  <form {{action "submit" on="submit"}}>
    <div class="create">
      <h3 style="color:#0F2538; text-align:center;">Influencer Application</h3>
      <div class="col-sm-6">
  	     <div class="form-group">
           {{input type="text" class="form-control"
                id="firstname" required="true"
                placeholder="First Name"
                value=influencer.firstname}}
  	     </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          {{input type="text" class="form-control"
                  id="lastname" required="true"
                  placeholder="Last Name"
                  value=influencer.lastname}}
        </div>
      </div>
      <br />
      <br />
      <br />
    <div class="form-group">
      <span class="form-group-addon">
        <i class="material-icons">chat</i>
      </span>
      {{input type="text" class="form-control"
              id="description" required="true"
              placeholder="Describe Yourself"
              value=influencer.description}}
    </div>
    <div class="form-group">
      <span class="form-group-addon">
        <i class="material-icons">person</i>
      </span>
      {{input type="text" class="form-control"
              id="facebook"
              placeholder="Link to Your Facebook"
              value=influencer.facebook}}
    </div>
    <div class="form-group">
      <span class="form-group-addon">
        <i class="material-icons">person</i>
      </span>
      {{input type="text" class="form-control"
              id="twitter"
              placeholder="Twitter Username"
              value=influencer.twitter}}
    </div>
    <div class="form-group">
      <span class="form-group-addon">
        <i class="material-icons">person</i>
      </span>
      {{input type="text" class="form-control"
              id="instagram"
              placeholder="Instagram Username"
              value=influencer.instagram}}
    </div>
    <div class="form-group">
      <span class="form-group-addon">
        <i class="material-icons">person</i>
      </span>
      {{input type="text" class="form-control"
              id="snapchat"
              placeholder="Snapchat Username"
              value=influencer.snapchat}}
    </div>
    <div class="form-group">
      <span class="form-group-addon">
        <i class="material-icons">camera</i>
      </span>
      {{input type="text" class="form-control"
              id="profession" required="true"
              placeholder="Your Profession"
              value=influencer.profession}}
    </div>
    <br />
  <center>
    <button type="submit" class="btn btn-primary">
      Submit
    </button>

    <button class="btn btn-default" {{action "reset"}}>
      Cancel
    </button>
  </center>
</div>
</form>
</center>
