<div class="author-quote-wrap">
	<input class="toggle-quote" type="radio" id="AQ-1" name="quote" checked>
	<div class="author-quote">
		<div class="pull-left author-photo">
			<iframe width="100%" height="100%" src="https://www.youtube.com/embed/FgFUrsszZLM" frameborder="0" allowfullscreen></iframe>
		</div>
		<div class="pull-right quote-content">
			<div class="clearfix animated zoomIn"><div class="quote-like pull-right"><span class="love"></span> 423</div></div>
			<div class="quote-text animated rotateInDownRight">{{spark.name}}</div>
			<div class="quote-author animated lightSpeedIn">{{spark.influencer.firstname}} {{spark.influencer.lastname}}</div>
		</div>
	</div>
</div>
<br />
<br />
<div class="col-sm-6">
<div class="well" style="text-align:center; margin-top:20px;">
	<h6 style="font-weight:bold"><mark>DETAILS</mark><br />{{spark.details}}</h6>
	<h6 style="font-weight:bold"><mark>Verification Method</mark><br />{{spark.verification}}</h6>
	<h6 style="font-weight:bold"><mark>Verification Criteria</mark><br />{{spark.criteria}}</h6>
	{{#if isOwned}}
	<button type="submit" class="btn btn-primary btn-xs" style="float:left" {{action "edit"}}>
		Edit Spark
	</button>
	<button type="submit" class="btn btn-primary btn-xs" style="float:right" {{action "delete"}}>
		Delete Spark
	</button>
	{{/if}}
	<h6 style="font-weight:bold"><mark>Deadline</mark><br />{{spark.dateFormat}}</h6>
</div>


</div>
<br />
<br />
<div class="col-sm-6">
	  {{#link-to 'influencer' spark.influencer}}<div class="coolButton">View All of {{spark.influencer.firstname}}'s -> Sparks</div>{{/link-to}}
	<div class="tagcloud01">
	<ul>
		{{#each spark.taggings as |tagging|}}
		<li>{{#link-to 'search' tagging.tag.id}}{{tagging.tag.text}}{{/link-to}}</li>
		{{/each}}
	</ul>
</div>
